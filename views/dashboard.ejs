<!DOCTYPE html>
<html>
<head>
    <title>SMS Log</title>
    <meta http-equiv="refresh" content="5">
    <style>
        body { font-family: sans-serif; }
        table { border-collapse: collapse; width: 100%; }
        th, td { border: 1px solid #dddddd; text-align: left; padding: 8px; }
        tr:nth-child(even) { background-color: #f2f2f2; }
    </style>
</head>
<body>
    <div style="position: fixed; top: 10px; right: 10px;">
        <form action="/logout" method="get" style="display: inline-block;">
            <button type="submit">Logout</button>
        </form>
        <form action="/test-sms" method="post" style="display: inline-block;">
            <button type="submit">Send Test SMS</button>
        </form>
        <form action="/clear-log" method="get" style="display: inline-block;">
            <button type="submit">Clear Log</button>
        </form>
    </div>
    <h1>SMS Log</h1>
    <table>
        <tr>
            <th>Timestamp</th>
            <th>To</th>
            <th>Message</th>
            <th>Status</th>
            <th>Device</th>
            <th>Response</th>
        </tr>
        <% smsLog.forEach(log => { %>
            <tr>
                <td><%= log.timestamp %></td>
                <td><%= log.to %></td>
                <td><%= log.message %></td>
                <td><%= log.status %></td>
                <td><%= log.device %></td>
                <td><%= typeof log.response === 'object' ? JSON.stringify(log.response) : log.response %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>